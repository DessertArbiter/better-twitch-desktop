{
  "name": "ffz-desktop",
  "version": "1.0.0",
  "description": "FrankerFaceZ for Twitch Desktop client",
  "main": "index.js",
  "scripts": {
    "build": "webpack --config config/webpack.config.js",
    "watch": "webpack -w --config config/webpack.config.js",
    "build:prod": "BABEL_ENV=production npm run build",
    "build:dev": "BABEL_ENV=development npm run build",
    "dev": "concurrently --kill-others \"node server.js\" \"npm run watch\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prasoc/ffz-desktop.git"
  },
  "keywords": [
    "twitch",
    "chat",
    "ffz",
    "bttv",
    "frankerfacez"
  ],
  "author": "prasoc",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/prasoc/ffz-desktop/issues"
  },
  "homepage": "https://github.com/prasoc/ffz-desktop#readme",
  "devDependencies": {
    "@types/jquery": "^3.2.11",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-minify": "^0.2.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-minify": "^0.2.0",
    "concurrently": "^3.5.0",
    "express": "^4.15.4",
    "ts-loader": "^2.3.2",
    "typescript": "^2.4.2",
    "webpack": "^3.5.4",
    "webpack-dev-server": "^2.7.1"
  }
}
