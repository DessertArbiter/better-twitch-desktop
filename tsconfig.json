{
    "compilerOptions": {
        "outDir": "./build/",
        "rootDirs": [
            "src"
        ],
        "allowJs": false,
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "es2015",
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "jsx": "react",
        "moduleResolution": "node"
    },
    "include": [
        "./src/**/*"
    ]
}
